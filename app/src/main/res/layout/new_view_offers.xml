<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4fbff">

    <TableRow
        android:id="@+id/hr2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/lightBlue"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="110dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logowhite" />

    <Button
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle"
        android:fontFamily="@font/khula_bold"
        android:text="J"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="13dp" />

    <TextView
        android:id="@+id/congrats"
        android:layout_width="350dp"
        android:layout_height="79dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/titillium_web_bold"
        android:gravity="center"
        android:text="Congratulations! You qualify for these pre-approved loans:"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hr2" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="395dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="#ededed"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/congrats">

        <TextView
            android:id="@+id/loaner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:fontFamily="@font/titillium_web_bold"
            android:text="Loaner"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web_bold"
            android:text="Amount ($)"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="@font/titillium_web_bold"
            android:text="Term (yr)"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/apr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web_bold"
            android:text="APR(%)"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="36dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:fontFamily="@font/titillium_web"
            android:paddingLeft="10dp"
            android:text="Best Egg" />

        <TextView
            android:id="@+id/moneyyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:text="80,000" />

        <TextView
            android:id="@+id/howlong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:fontFamily="@font/titillium_web"
            android:text="2"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/aprPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titillium_web"
            android:paddingLeft="20dp"
            android:text="7%"
            android:textAlignment="center" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>